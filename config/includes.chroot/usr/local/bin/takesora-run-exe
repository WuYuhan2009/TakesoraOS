#!/usr/bin/env bash
set -euo pipefail
FILE="${1:-}"
[[ -n "$FILE" ]] || { echo "Usage: takesora-run-exe <file.exe>"; exit 1; }
export WINEESYNC=1 WINEFSYNC=1 DXVK_HUD=0
PREFIX="${HOME}/.local/share/takesora/wine-default"
mkdir -p "$PREFIX"
WINEPREFIX="$PREFIX" wineboot -u >/dev/null 2>&1 || true
WINEPREFIX="$PREFIX" wine "$FILE"
